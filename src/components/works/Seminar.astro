---
import Header2 from "@/components/common/Header2.astro";
import Header3 from "@/components/common/Header3.astro";
import Text from "@/components/common/Text.astro";
import LinkCard from "@/components/common/LinkCard.astro";

interface seminar {
    title: string;
    url: string;
    paragraph: string;
}

const seminars: seminar[] = [
    {
        title: "物理数学演習ゼミ",
        url: "https://www.saiensu.co.jp/search/?isbn=978-4-86481-037-1&y=2016",
        paragraph: "大学に入ってから初めて参加した自主ゼミです。微分方程式や線形代数などの基礎的な内容から始まり、物理学を学ぶ上で必要なベクトル解析や複素解析、さらにフーリエ変換などについて勉強しました。"
    },
    {
        title: "測度論ゼミ",
        url: "https://www.kspub.co.jp/book/detail/1565715.html",
        paragraph: "初めて自分で開催したゼミです。2年前期で学んだ確率論をもっと詳しく基礎的な内容から学びたいと思い勉強しました。測度論から始まり、積分を測度論を用いて構築した上で確率論を測度を用いて構築し直すといった内容を学びました。"
    },
    {
        title: "確率過程ゼミ",
        url: "https://www.kyoritsu-pub.co.jp/book/b10003784.html",
        paragraph: "測度論ゼミのあと、友人から誘われて参加したゼミです。現在も継続してゼミを行っています。"
    }
]
---
<Header2>Seminar</Header2>
<Text>今までに行ってきたゼミについて紹介します。</Text>
{seminars.map((seminar) => (
    <Header3>{seminar.title}</Header3>
    <Text>{seminar.paragraph}</Text>
    <LinkCard url={seminar.url} />
))}