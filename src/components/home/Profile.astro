---
import { Image } from "astro:assets";
import Card from "@/components/common/Card.astro";
import GithubDark from "@/components/icons/GithubDark.astro";
import Twitter from "@/components/icons/Twitter.astro";
import Zenn from "@/components/icons/Zenn.astro";
import profileIconImage from "@/assets/profile_icon.png";
---
<Card>
    <div class="">
        <div class="w-64 h-64 mx-auto mb-4 overflow-hidden rounded-full">
            <Image 
                src={profileIconImage} 
                width={250} 
                height={250} 
                alt="プロフィールアイコン" 
                class="w-full h-full object-cover object-center"
                format="webp"
                sizes="250px"
            />
        </div>
        <div class="text-center">
            <div class="mb-2">
                <div class="text-2xl font-bold">
                    木村 慎之介
                </div>
                <div class="text-gray-500">
                    Shinnosuke Kimura
                </div>
            </div>
            <div class="mb-4">
                電気通信大学 情報理工学域 Ⅰ類
            </div>
            <div class="flex justify-center gap-4">
                <GithubDark class="w-8 h-8"/>
                <Twitter class="w-8 h-8"/>
                <Zenn class="w-8 h-8"/>
            </div>
        </div>
    </div>
</Card>